{
	"name": "electron-quick-start",
	"version": "1.0.0",
	"description": "A minimal Electron application",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
		"postinstall:electron": "node postinstall",
		"build": "npm run postinstall:electron",
		"build:prod": "npm run build -- -c production",
		"release:all": "npm run build:prod && npx electron-builder build -mwl -p always"

	},
	"repository": "https://github.com/rrhythmsharma/electron-travis-ci",
	"build": {
		"appId": "electron-travis-ci",
		"category": "test",
		"files": [
		  "dist/",
		  "node_modules/",
		  "static/",
		  "main.js",
		  "index.html",
		  "package.json"
		],
		"dmg": {
		  "contents": [
			{
			  "x": 130,
			  "y": 220
			},
			{
			  "x": 410,
			  "y": 220,
			  "type": "link",
			  "path": "/Applications"
			}
		  ]
		},
		"win": {
			"target": [
			  {
				"target": "nsis-web",
				"arch": [
				  "x64",
				  "ia32"
				]
			  },
			  {
				"target": "msi",
				"arch": [
				  "x64",
				  "ia32"
				]
			  }
			]
		},
		"linux": {
			"category": "Chat;GNOME;GTK;Network;InstantMessaging",
			"packageCategory": "GNOME;GTK;Network;InstantMessaging",
			"description": "electron-quick-start for Linux",
			"target": [
			  "deb",
			  "zip",
			  "AppImage"
			]
		  }
	  },
	"directories": {
	"output": "release"
	},
	"keywords": [
		"Electron",
		"quick",
		"start",
		"tutorial",
		"travis-ci"
	],
	"author": {
		"name": "Rhythm Sharma",
		"email": "rrhythmsharma@gmail.com",
		"url": "https://github.com/rrhythmsharma"
	},
	"license": "CC0-1.0",
	"devDependencies": {
		"electron": "^6.0.2",
		"electron-builder": "^21.2.0"
	}
}
